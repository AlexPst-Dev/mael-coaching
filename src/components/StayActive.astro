<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(4, 1fr);
    gap: 1rem;
  }

  .grid .paragraph {
    grid-column: span 4 / span 4;
    width: 90%;
  }

  .grid .firstStat {
    grid-column: span 2 / span 2;
    grid-row: span 2 / span 2;
    grid-column-start: 1;
    grid-row-start: 2;
  }

  .grid .secondStat {
    grid-column: span 2 / span 2;
    grid-row: span 2 / span 2;
    grid-column-start: 3;
    grid-row-start: 2;
  }

  .grid .thirdStat {
    grid-column: span 2 / span 2;
    grid-row: span 3 / span 3;
    grid-column-start: 5;
    grid-row-start: 1;
  }

  .grid .source {
    grid-column: span 2 / span 2;
    grid-column-start: 5;
    grid-row-start: 4;
  }

  .kpi-indicator {
    font-size: 4rem;
    font-weight: 500;
    font-family: "Roboto", Arial, sans-serif;
  }
  #firstStatKPI {
    color: var(--color-purple);
  }
  #secondStatKPI {
    color: var(--color-cyan);
  }
  #thirdStatKPI {
    color: var(--color-pink);
    font-size: 8rem;
  }
  .source p {
    font-size: 1rem;
    color: #454545;
  }

  .firstStat,
  .secondStat {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 70%;
  }
  .thirdStat {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }
  .firstStat p,
  .secondStat p,
  .thirdStat p {
    text-align: center;
  }

  .circle-progress {
    position: relative;
    width: 400px;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
  }

  .circle-progress::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    background: conic-gradient(var(--color-pink) 0% 80%, #eeeeee00 80% 100%);
    z-index: 1;
  }

  .circle-progress .kpi-indicator {
    position: relative;
    z-index: 2;
    background: white;
    border-radius: 50%;
    width: 380px;
    height: 380px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .thirdStat .box {
    background-color: white;
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.25);
    position: absolute;
    bottom: 2rem;
    left: -8rem;
    z-index: 3;
  }

  @media screen and (max-width: 1300px) {
    .grid {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
    }

    #thirdStatKPI {
      font-size: 3rem;
    }

    .circle-progress {
      width: 120px;
      height: 120px;
      position: absolute;
      top: -6rem;
      right: -2rem;
      z-index: 4;
    }

    .circle-progress .kpi-indicator {
      width: 100px;
      height: 100px;
    }

    .thirdStat {
      margin-top: 6rem;
    }

    .thirdStat .box {
      bottom: 0;
      left: 0;
      position: relative;
    }

    .firstStat,
    .secondStat {
      width: 100%;
    }

    .grid .paragraph {
      width: 100%;
    }
  }
</style>
